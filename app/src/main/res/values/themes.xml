<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#6665e0</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#6665e0</item>
    </style>



    <style name="MyAppThem" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorControlNormal">@color/line_80</item>
        <item name="colorControlActivated">@color/c_00BFFF</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popmenuText</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popmenuText</item>
    </style>


    <!--popmenu的字体颜色-->
    <style name="popmenuText">
        <item name="android:textColor">@color/line_80</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--popMenu分割线的颜色-->
    <style name="popmenuDivier">
        <item name="android:divider">@color/line</item>
        <item name="android:dividerHeight">2sp</item>
    </style>



    <!--选中的样式，可以设置选择的字体颜色，这里只是为了改变选择时的字体大小-->
    <style name="bottom_tab_title_active">
        <item name="android:textSize">30sp</item>
    </style>

    <!--没有选中的样式，导航默认的字体大小就是12sp-->
    <style name="bottom_tab_title_inactive">
        <item name="android:textSize">30sp</item>
    </style>


</resources>